#include <stdio.h>

int main() {
    int i;

    // Bispo - 5 casas
    printf("Movimento do Bispo:\n");
    for (i = 1; i <= 5; i++) {
        printf("Casa %d: movendo para diagonal superior direita\n", i);
    }

    // Torre - 5 casas
    printf("\nMovimento da Torre:\n");
    for (i = 1; i <= 5; i++) {
        printf("Casa %d: movendo para a direita\n", i);
    }

    // Rainha - 8 casas
    printf("\nMovimento da Rainha:\n");
    for (i = 1; i <= 8; i++) {
        printf("Casa %d: movendo para a esquerda\n", i);
    }

    return 0;
}
